<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>CheckoutServlet</servlet-name>
        <servlet-class>checkoutServlet.CheckoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productServlet</servlet-name>
        <servlet-class>productServlet.ProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductToCheckout</servlet-name>
        <servlet-class>prodToCheckout.ProductToCheckout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckoutServlet</servlet-name>
        <url-pattern>/SecondServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productServlet</servlet-name>
        <url-pattern>/proserv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductToCheckout</servlet-name>
        <url-pattern>/PTC</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
